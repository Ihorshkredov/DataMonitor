@{

    ViewData["Title"] = "DATA";
    string colour;
}
<h1>Testers list</h1>
    
<table>
    <tr>
        <th> Tester ID </th>
        <th> Tester Name </th>
        <th> First Pass Yield </th>
    </tr>
    @foreach(var tester in ViewBag.Testers)
    {
        <tr>
			<td>@tester.id</td>
            <td>@tester.Name</td>
            @if (tester.FPY >= 90)
            {
                colour = "green";
            }
            else if (tester.FPY < 90 && tester.FPY >= 50)
            {
                colour = "orange"; 
            }
            else
            {
                colour = "red";
            }
            <td bgcolor ="@colour">@tester.FPY</td>
        </tr>
    }
   
</table>
<br /><br/>
<form action="/Home/Data" method="post">
	<label for="testerName">Enter tester ID and submit for more info:</label><br>
	<input type="number" id="testerName" name="id"><br>
    <input type="submit" value="Submit">
</form>