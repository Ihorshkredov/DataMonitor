@{
    string tabColor = "";
}
<h1 color>Information about tester with ID - @ViewBag.ID</h1>
<br/>

<table>
<tr>
    <th> Tester ID </th>
    <th> STATUS</th>
    <th> Full check ID </th>
</tr>
@foreach (var test in ViewBag.Tests)
{
    <tr>
			<td>@test.id</td> 
            @if (test.Status == "PASSED")
			{
				tabColor = "green";
			}
			else
			{
				tabColor = "red";
			}
			<td bgcolor="@tabColor">@test.Status</td>
            <td>@test.TimeStamp</td>
    </tr>
}
</table>